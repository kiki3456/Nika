    <script>
        let meta = 2000;
        let consumido = 0;

        function atualizarProgresso() {
            let porcentagem = (consumido / meta) * 100;
            if (porcentagem > 100) porcentagem = 100;

            document.getElementById('progressFill').style.width = porcentagem + '%';
            document.getElementById('progressText').innerText = Math.round(porcentagem) + "% da meta atingida";
            document.getElementById('consumido').innerText = consumido;
        }

        function adicionarAgua(qtd) {
            consumido += qtd;
            atualizarProgresso();
            if (consumido >= meta) {
                alert("Parab√©ns Nika üéÄ‚ù§Ô∏è Voc√™ bateu sua meta de hidrata√ß√£o!");
            } else {
                alert("Boa, Nika! ‚ù§Ô∏è Voc√™ adicionou " + qtd + "ml de √°gua!");
            }
        }

        atualizarProgresso();
    </script>

